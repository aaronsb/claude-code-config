{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Edit(~/.claude/**)",
      "Read(~/.claude/**)",
      "Write(~/.claude/**)",
      "Bash(~/.claude/hooks/ways/list-triggered.sh:*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/ways/clear-markers.sh"
          },
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/ways/show-core.sh"
          },
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/ways/init-project-ways.sh"
          },
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/check-config-updates.sh"
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/ways/clear-markers.sh"
          },
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/ways/show-core.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/ways/check-file-pre.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/ways/check-bash-pre.sh"
          }
        ]
      },
      {
        "matcher": "TaskCreate",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/ways/mark-tasks-active.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/ways/check-prompt.sh"
          },
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/ways/check-state.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/ways/check-response.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "${HOME}/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "clangd-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
