{
  "description": "Injects methodology instructions at critical moments and checks for updates",
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "cat ${HOME}/.claude/claude-hook.md"
      },
      {
        "type": "command",
        "command": "${HOME}/.claude/hooks/list-tracking-files.sh"
      },
      {
        "type": "command",
        "command": "${HOME}/.claude/hooks/check-config-updates.sh"
      }
    ],
    "PreCompact": [
      {
        "type": "command",
        "command": "cat ${HOME}/.claude/claude-hook.md"
      },
      {
        "type": "command",
        "command": "${HOME}/.claude/hooks/list-tracking-files.sh"
      }
    ]
  }
}
